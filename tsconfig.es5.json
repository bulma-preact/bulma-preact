{
    "compilerOptions": {
        "moduleResolution": "node",
        "maxNodeModuleJsDepth": 6,
        "declaration": true,
        "declarationDir": "lib/",
        "module": "esnext",
        "lib": [
            "es2015",
            "dom"
        ],
        "jsx": "react",
        "jsxFactory": "h",
        "outDir": "lib/",
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}